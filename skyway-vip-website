function CrewCard({ title, text }) {
  return (
    <Card className="bg-[#07160F] border-none rounded-2xl shadow-xl">
      <CardContent className="p-8">
        <h3 className="text-xl mb-3 text-gray-300">{title}</h3>
        <p className="text-gray-400 text-sm">{text}</p>
      </CardContent>
    </Card>
  );
}

function ServiceCard({ icon, title, text }) {
  return (
    <Card className="bg-[#07160F] border-none rounded-2xl shadow-xl">
      <CardContent className="p-8">
        <div className="text-[#2FA77D] mb-4">{icon}</div>
        <h3 className="text-xl mb-3 text-gray-300">{title}</h3>
        <p className="text-gray-400 text-sm">{text}</p>
      </CardContent>
    </Card>
  );
}
